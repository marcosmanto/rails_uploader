<!DOCTYPE html>
<html>
<head>
  <title>RailsUploader</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="uk-container uk-container-center uk-margin-top container-shadow">

  <div class="uk-grid" data-uk-grid-margin="">
      <div class="uk-width-1-1 uk-text-center">
        <img class="logo" src="<%= asset_path('logohub.png') -%>" alt="Sistema de arquivos" title="Sistema de arquivos" />
      </div>
  </div>

  <nav class="uk-navbar uk-margin-bottom-remove">

      <ul class="menu uk-navbar-nav uk-hidden-small ">
          <li>
              <%#= link_to "Cadastrar mais", new_image_path, remote: true, class: 'cadastrar_imagem' # remote: true direciona para view js, necessário format.js no controller %> 
              <%= link_to "Cadastrar mais", new_image_path, class: 'cadastrar_imagem' %>
             <!--  <a href="#cadastro">Cadastrar mais</a> -->
          </li>
          <!-- <li class="uk-active"> -->
          <li>
              <%= link_to "Ver tudo", images_path, class: 'ver_tudo' %>
              <!-- <a href="#tudo">Ver tudo</a> -->
          </li>
          <li>
              <%= link_to "Ver arquivos", images_path(filtro: 'files'), class: 'ver_arquivos' %>
              <!-- <a href="#arquivos">Ver arquivos</a> -->
          </li>
          <li>
              <%= link_to "Ver imagens", images_path(filtro: 'images'), class: 'ver_imagens' %>
              <!-- <a href="#imagens">Ver imagens</a> -->
          </li>
          <li>
              <%= link_to "Ver vídeos", images_path(filtro: 'videos'), class: 'ver_videos' %>
              <!-- <a href="#videos">Ver vídeos</a> -->
          </li>
      </ul>
      <a href="#offcanvas" class="uk-navbar-toggle uk-visible-small" data-uk-offcanvas=""></a>
  </nav>

  <div class="uk-grid" data-uk-grid-margin>
      <div class="uk-width-medium-1-1 uk-text-center">
        <div class="galeria">
          <div class="loading"><img src="<%= asset_path('load.gif') -%>" alt="Carregando..." title="Carregando..." />&nbsp;&nbsp;Aguarde, carregando informações!</div>
          <% if flash[:notice] %>
            <div class="uk-alert" data-uk-alert="">
                <!-- <a href="" class="uk-alert-close uk-close"></a> -->
                <p><%= flash[:notice] %></p>
            </div>
          <% end %> 
          <ul class="uk-grid uk-grid-width-1-2 uk-grid-width-large-1-3 lista" data-uk-grid-margin>

						<%= yield %>

          </ul>
        </div>
      </div>
  </div>  
</div>

<div id="offcanvas" class="uk-offcanvas">
  <div class="uk-offcanvas-bar">
    <ul class="uk-nav uk-nav-offcanvas">
      <li>
          <a href="layouts_frontpage.html">Frontpage</a>
      </li>
         <li>
          <a href="layouts_portfolio.html">Portfolio</a>
      </li>
      <li>
          <a href="layouts_blog.html">Blog</a>
      </li>
         <li>
          <a href="layouts_documentation.html">Documentation</a>
      </li>
      <li class="uk-active">
          <a href="layouts_contact.html">Contact</a>
      </li>
      <li>
          <a href="layouts_login.html">Login</a>
      </li>
      </ul>
    </div>
</div>   
<div class="modal"></div>
</body>
</html>
